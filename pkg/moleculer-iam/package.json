{
  "name": "moleculer-iam",
  "version": "0.4.1",
  "description": "Centralized IAM module for moleculer.\nIncluding a certified OIDC provider and an Identity provider for user profile, credentials, and custom claims management.\nCustom claims could be defined/updated by declarative schema which contains claims validation and migration strategy.",
  "author": "QMIT Inc.",
  "repository": {
    "type": "git",
    "url": "https://github.com/qmit-pro/moleculer-iam.git"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "dev": "nodemon",
    "build": "rm -rf dist && tsc -p tsconfig.json && cpy '**/*' '!**/*.ts' ../dist/ --cwd=src/ --parents",
    "lint": "tslint -p tsconfig.json",
    "coverall": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
    "test": "yarn test-with-examples --testPathIgnorePatterns=src/examples",
    "test-with-examples": "node --trace-warnings node_modules/.bin/jest --coverage --detectOpenHandles --forceExit"
  },
  "bin": {
    "generate-jwks": "./bin/generate-jwks.js"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "ts-node src/examples/index.ts"
  },
  "keywords": [
    "QMIT",
    "moleculer"
  ],
  "dependencies": {
    "accept-language-parser": "^1.5.0",
    "awesome-phonenumber": "^2.33.0",
    "bcrypt": "^4.0.1",
    "change-case": "^4.1.1",
    "dataloader": "^2.0.0",
    "dotenv": "^8.2.0",
    "fastest-validator": "^1.8.0",
    "i18next": "^19.4.5",
    "jose": "^1.27.0",
    "kleur": "^3.0.3",
    "koa-bodyparser": "^4.3.0",
    "koa-compose": "^4.1.0",
    "koa-helmet": "^5.2.0",
    "koa-json": "^2.0.2",
    "koa-locale": "^1.3.0",
    "koa-morgan": "^1.0.1",
    "koa-mount": "^4.0.0",
    "koa-no-trailing-slash": "^2.1.0",
    "koa-passport": "^4.1.3",
    "koa-router": "^8.0.8",
    "koa-static-cache": "^5.1.3",
    "koajs-nocache": "^2.0.3",
    "lodash": "^4.17.15",
    "lru-cache": "^5.1.1",
    "moleculer": "^0.14.7",
    "moleculer-iam-app": "link:../moleculer-iam-app",
    "moment": "^2.26.0",
    "mysql2": "^2.1.0",
    "object-hash": "^2.0.3",
    "oidc-provider": "^6.26.1",
    "passport-apple": "^1.1.1",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth": "^2.0.0",
    "passport-kakao": "^1.0.0",
    "passport-koa": "^1.0.1",
    "request-promise-native": "^1.0.8",
    "sequelize": "^5.21.11",
    "terser": "^4.7.0",
    "umzug": "^2.3.0",
    "uuid": "^8.1.0"
  },
  "devDependencies": {
    "@types/accept-language-parser": "^1.5.1",
    "@types/auth-header": "^1.0.1",
    "@types/bcrypt": "^3.0.0",
    "@types/bluebird": "^3.5.32",
    "@types/cookie": "^0.4.0",
    "@types/express-useragent": "^1.0.0",
    "@types/helmet": "^0.0.47",
    "@types/jest": "^25.2.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-helmet": "^5.2.0",
    "@types/koa-json": "^2.0.18",
    "@types/koa-morgan": "^1.0.4",
    "@types/koa-mount": "^4.0.0",
    "@types/koa-passport": "^4.0.2",
    "@types/koa-router": "^7.4.1",
    "@types/koa-static": "^4.0.1",
    "@types/koa-static-cache": "^5.1.0",
    "@types/lodash": "^4.14.153",
    "@types/lru-cache": "^5.1.0",
    "@types/node": "^14.0.5",
    "@types/object-hash": "^1.3.3",
    "@types/passport": "^1.0.3",
    "@types/passport-apple": "^1.1.0",
    "@types/passport-facebook": "^2.1.10",
    "@types/passport-google-oauth": "^1.0.41",
    "@types/passport-kakao": "^0.2.0",
    "@types/request-promise-native": "^1.0.17",
    "@types/terser": "^3.12.0",
    "@types/umzug": "^2.2.3",
    "@types/uuid": "^8.0.0",
    "benchmarkify": "^2.1.2",
    "copy-webpack-plugin": "^6.0.1",
    "coveralls": "^3.1.0",
    "cpy-cli": "^3.1.1",
    "jest": "^26.0.1",
    "jest-cli": "^26.0.1",
    "moleculer-api": "^0.3.2",
    "moleculer-repl": "^0.6.4",
    "nodemon": "^2.0.4",
    "qmit-sdk": "^1.0.24",
    "sequelize-cli": "^5.5.1",
    "ts-jest": "^26.0.0",
    "ts-node": "^8.10.1",
    "tslint": "^6.1.2",
    "typescript": "^3.9.3"
  },
  "engines": {
    "node": ">= 10.x.x"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "node"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/src/**/*.spec.(ts|js)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  }
}
