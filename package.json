{
  "name": "moleculer-iam",
  "version": "0.1.7",
  "description": "Centeralized IAM module for moleculer. Including default OIDC provider for user profile and custom claims (for ABAC, also simple role system for RBAC available) management, custom claims are supported by scheme validation and versioned migration. Either can be composed with remote OIDC providers like G-Suite. Basic authentication and authorization features for OIDC/OAuth2 are supported. Can operate mutiple realms, including admin, user, service-account realms are set by default.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "dev": "nodemon",
    "build": "rm -rf dist && tsc && npm run build-app",
    "lint": "tslint -p tsconfig.json && npm run lint-app",
    "deps": "npm-check -u",
    "coverall": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "test": "npm run test-with-examples -- --testPathIgnorePatterns=src/examples",
    "test-with-examples": "node --trace-warnings node_modules/.bin/jest --coverage --detectOpenHandles --forceExit --testPathIgnorePatterns=src/assets",
    "build-app": "npm --prefix src/assets run build",
    "lint-app": "tslint -p src/assets/tsconfig.json",
    "dev-app": "npm --prefix src/assets run dev",
    "test-app": "npm --prefix src/assets run test"
  },
  "bin": {
    "generate-jwks": "./bin/generate-jwks.js"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts",
      "src/assets/*"
    ],
    "exec": "ts-node ./src/examples/index.ts"
  },
  "keywords": [
    "QMIT",
    "moleculer"
  ],
  "author": "QMIT Inc.",
  "dependencies": {
    "awesome-phonenumber": "^2.23.0",
    "fastest-validator": "^1.0.0-beta4",
    "jose": "latest",
    "kleur": "^3.0.3",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^5.2.0",
    "koa-json": "^2.0.2",
    "koa-morgan": "^1.0.1",
    "koa-mount": "^4.0.0",
    "koa-router": "^7.4.0",
    "koa-static-cache": "^5.1.2",
    "koajs-nocache": "^2.0.3",
    "lodash": "^4.17.15",
    "lru-cache": "^5.1.1",
    "moleculer": "^0.14.0-beta6",
    "moment": "^2.24.0",
    "mysql2": "^2.0.1",
    "oidc-provider": "^6.16.0",
    "sequelize": "^5.21.2",
    "umzug": "^2.2.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/koa-static-cache": "^5.1.0",
    "@types/bluebird": "^3.5.24",
    "@types/helmet": "0.0.45",
    "@types/jest": "^24.0.18",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-json": "^2.0.18",
    "@types/koa-morgan": "^1.0.4",
    "@types/koa-mount": "^4.0.0",
    "@types/koa-router": "^7.0.42",
    "@types/koa-static": "^4.0.1",
    "@types/lodash": "^4.14.149",
    "@types/lru-cache": "^5.1.0",
    "@types/node": "^12.12.14",
    "@types/umzug": "^2.2.2",
    "@types/uuid": "^3.4.6",
    "benchmarkify": "^2.1.2",
    "coveralls": "^3.0.6",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "moleculer-qmit": "^1.0.8",
    "nodemon": "^1.19.2",
    "npm-check": "5.9.0",
    "sequelize-cli": "^5.5.1",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.0",
    "typescript": "^3.7.3"
  },
  "engines": {
    "node": ">= 10.x.x"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "node"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/src/**/*.spec.(ts|js)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/qmit-pro/moleculer-iam.git"
  },
  "license": "MIT"
}
